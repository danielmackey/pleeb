{
  "name": "pleeb",
  "version": "0.0.2",
  "description": "Mock server for decoupled front-end development",
  "main": "lib/server.js",
  "scripts": {
    "build": "babel src/ -d lib --copy-files",
    "prepublish": "npm run build",
    "start": "babel-node index.js",
    "test": "$(npm bin)/jest"
  },
  "author": "Kevin Altman <kevin@itsthatguy.com>",
  "license": "MIT",
  "repository": "git@github.com:itsthatguy/pleeb.git",
  "dependencies": {
    "app-root-dir": "^1.0.2",
    "babel-cli": "^6.24.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-latest": "^6.24.0",
    "event-stream": "^3.3.4",
    "glob-stream": "^6.1.0",
    "glob-watcher": "^3.1.0",
    "hapi": "^16.1.0",
    "lodash": "^4.17.4"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/__tests__/test-setup.js",
    "testRegex": "/__tests__/.*spec\\.js$",
    "verbose": true
  },
  "devDependencies": {
    "jest": "^19.0.2",
    "node-fetch": "^1.6.3"
  }
}
